<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:graphics="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="demo.Pages.ResultsPage"
             Title="Survey Results">
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label x:Name="SurveyTitle" FontSize="24" FontAttributes="Bold" Text="Survey Title" />
        <Label x:Name="SurveyDescription" FontSize="18" Text="Survey Description" />
        <graphics:SKCanvasView x:Name="ChartCanvas" PaintSurface="OnCanvasViewPaintSurface" HeightRequest="300" WidthRequest="300" />
    </VerticalStackLayout>
</ContentPage>
