<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demo.Pages.StartPage"
             Title="Welcome">
    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Welcome to the App!" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Login" Clicked="OnLoginClicked" WidthRequest="200" />
        <Button Text="Register" Clicked="OnRegisterClicked" WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>
